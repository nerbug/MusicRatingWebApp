@model MusicRatingWebApp.Models.Artist

@{
    ViewData["Title"] = $"Delete {Model.Name}?";
}

<h1>Delete</h1>

<h4 class="mb-4">Are you sure you want to delete the artist @Model.Name?</h4>
<div>
    <form asp-action="Delete">
        <input type="hidden" asp-for="Id" />
        <input type="submit" value="Delete" class="btn btn-danger" /> |
        <a asp-action="Index">Back to artist list</a>
    </form>
</div>
